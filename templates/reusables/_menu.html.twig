{% set route = app.request.attributes.get('_route') %}
<button class="navBars fa-solid fa-bars"></button>
<div class="navMenuBg"></div>
<nav class="navMenu">
    <ul class="items">
        <li><a href="{{ path('stockportfolio_index') }}"{% if route starts with 'stockportfolio_' %} class="selected"{% endif %}>{{ 'portfolio'|trans }}</a></li>
        <li><a href="{{ path('stockaccounting_index') }}"{% if route starts with 'stockaccounting_' %} class="selected"{% endif %}>{{ 'accounting'|trans }}</a></li>
